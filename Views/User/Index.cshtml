@model WE_Asgn_2_a.Models.MUser

@{
    ViewBag.Title = "User Profile";
}

<h2>Admission Form</h2>
@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>Name</td>
            <td>@Html.TextBoxFor(x => x.Name)</td>
        </tr>
        <tr>
            <td>Phone</td>
            <td>@Html.TextBoxFor(x => x.Phone)</td>
        </tr>
        <tr>
            <td>Email</td>
            <td>@Html.TextBoxFor(x => x.Email)</td>
        </tr>
        <tr>
            <td>Password</td>
            <td>@Html.PasswordFor(x => x.Password)</td>
        </tr>
        <tr>
            <td>Gender</td>
            <td>Male: @Html.RadioButtonFor(x => x.Gender, "M")Female: @Html.RadioButtonFor(x => x.Gender, "F")</td>
        </tr>
        <tr>
            <td>Country</td>
            <td>@Html.DropDownListFor(x => x.Country, (List<SelectListItem>)ViewBag.countryList, "---Select---")</td>
        </tr>
        <tr>
            <td>isAdmin</td>
            <td>@Html.CheckBoxFor(x => x.IsAdmin)</td>
        </tr>
        <tr>
            <td><input type="submit" value="Add User" /></td>
        </tr>
    </table>
}
<p>@ViewBag.phone</p>

@if (ViewBag.rowAffected != null)
{
    <b>Rows Affected : @ViewBag.rowsAffected</b>
}
